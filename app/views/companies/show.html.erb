<p style="color: green"><%= notice %></p>

<%= render "game_header", resource: @company %>

<%= render partial: "critics/criticable_links", locals: { criticable: @company, active: "details" } %>

<section class="section bg-gray-100">
    <div class="container-xm text-center body content-xs mb-4">
      <%= @company.description %>
    </div>

    <div class="container-ssm heading content-xl mb-4">
      <p>Games (<%= @company.games.count %>)</p>
    </div>

    <div id="games">
      <% @company.games.each do |game| %>
        <div class="bg-white mb-4">
          <%= render game %>
        </div>
      <% end %>
    </div>
    
    <div class="content-s text-center primary-500">
        <%= link_to "Back", companies_path %>
    </div>
</section>
