<div class="section flex flex-column gap-4">
  <h1 class="heading">Change your password</h1>

  <div class="user-form">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="input">
        <%= f.label :password, "New password", class:"content-xs overline" %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
      </div>

      <div class="input">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div>
        <%= f.submit "Change my password", class: "button button--primary full-width" %>
      </div>
    <% end %>
  </div>
</div>
