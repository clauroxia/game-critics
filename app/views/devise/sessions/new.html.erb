<div class="section flex flex-column gap-4">
  <h1 class="heading center-text">Sign in with your account</h2>

  <div class="user-form">
    <% if alert %>
      <span class="error"><%= alert %></span>
    <% end %>

    <%= render "devise/shared/socials" %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "flex flex-column gap-4"}, data: { turbo: false }) do |f| %>
      <div class="input">
        <%= f.label :email, class:"content-xs overline" %>
        <div class="input__container">
          <%= f.email_field :email, class: "input__content", placeholder: "example@mail.com" %>
        </div>
      </div>
      <div class="input">
        <%= f.label :password, class:"content-xs overline" %>
        <div class="input__container">
          <%= f.password_field :password, class: "input__content", placeholder: "******" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <%= f.check_box :remember_me, class: "checkbox__input" %>
          <%= f.label :remember_me, class: "checkbox__text-container" %>
        </div>
      <% end %>

      <%= link_to "Forgot your password?", new_password_path(resource_name) %>

      <div>
        <%= f.submit "Sign in", class: "button button--primary full-width" %>
      </div>
    <% end %>
    <p class="center-text">Don't have an account?</p>
    <%= link_to "Create an account", new_registration_path(resource_name), method: :post, class: "center-text" %>
  </div>
</div>
